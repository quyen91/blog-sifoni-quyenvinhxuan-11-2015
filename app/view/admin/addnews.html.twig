{% extends 'admin/layout.html.twig' %}
{% block maincontent %}
	<script src="/plugin/ckeditor/ckeditor.js" type="text/javascript"></script>
	<article class="module width_full">
		<form action="" method="post" enctype="multipart/form-data">
			<header><h3>NEWW POST</h3></header>
				<div class="module_content">
						
						<fieldset>
							<label>Tên bài viết</label>
							<input type="text" name='name'>
						</fieldset>
						<fieldset>
							<label>Mô tả</label>
							<textarea class="not-expand" rows="6" name="description" ></textarea>
						</fieldset>
						<fieldset>
							<label>Nội dung</label>
							<div class="ckt">	
								<textarea id="full-descript"  rows="10" name='description'> </textarea>
							<script type="text/javascript"> CKEDITOR.replace('full-descript'); </script>
							</div>
							
						</fieldset>
						<fieldset style="width:48%; float:left; margin-right: 3%;"> <!-- to make two field float next to one another, adjust values accordingly -->
							<label> Tag</label>
							<input type="text" style="width:92%;" name='tag'>
							
						</fieldset>
						<fieldset style="width:48%; float:left;"> <!-- to make two field float next to one another, adjust values accordingly -->
							<label>Author</label>
							<input type="text" style="width:92%;" name='author'>
						</fieldset><div class="clear"></div>


						<fieldset style="width:100%; float:left; margin-right: 3%;"> <!-- to make two field float next to one another, adjust values accordingly -->
							<label>Ảnh</label>
							<input type="file" name='image' style="width:92%;" onchange="loadFile(event)">
							 <img accept="image/*" id="preview-img" height="300px">
							<script>
							 var loadFile = function(event) {
						    	 var reader = new FileReader();
						   		 reader.onload = function(){
						     	 var output = document.getElementById('preview-img');
						     	 output.src = reader.result;
						    	};
						    reader.readAsDataURL(event.target.files[0]);
  							};
							 </script>
						</fieldset>
						{# <fieldset style="width:48%; float:left;"> <!-- to make two field float next to one another, adjust values accordingly -->
							<label>Số lượng</label>
							<input type="text" style="width:92%;" name='qty'>
						</fieldset><div class="clear"></div> #}


						<div class="clear"></div>

						
				</div>
			<footer>
				<div class="submit_link">
					<select>
						<option>Draft</option>
						<option>Published</option>
					</select>
					<input type="submit" value="Publish" class="alt_btn">
					<input type="submit" value="Reset">
				</div>
			</footer>
		</form>
		</article><!-- end of post new article -->


	

{% endblock %}